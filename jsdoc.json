{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["src", "package.json", "README.md", "guides"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "referenceTitle": "spule documentation",
    "disableSort": false, 
    "collapse": true,
    "resources": {
      "@thi.ng/umbrella": "http://thi.ng/umbrella"
    }
  },
  "opts": {
    "destination": ".",
    "encoding": "utf8",
    "private": true,
    "recurse": true,
    "template": "./jsdoc/jsdoc-template"
  }
}